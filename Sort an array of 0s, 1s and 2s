public static void sort(int a[], int n)
    {
        int i=0;
        int P1=0;
        int P2=n-1;
        while(i<=P2){
            if(a[i]==0){
                swap(a[i],a[P1]);
                i++;
                P1++;
            }
            else if(a[i]==2){
                swap(a[i],a[P2]);
                P2--;
            }
            else{
                i++;
            }
        }
    }
